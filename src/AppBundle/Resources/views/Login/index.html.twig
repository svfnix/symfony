{% extends 'AppBundle::layout.html.twig' %}

{% block layout_body %}

    <div class="row margin-top-100px">
        <div class="col-sm-4 col-sm-offset-4">

            {% if error %}
                <div class="alert alert-error-flat margin-bottom-15px" role="alert">
                    <ul class="list-style-none padding-right-15px">
                        <li><i class="fa fa-quote-right  margin-left-5px"></i> {{ error.message|trans }}</li>
                    </ul>
                </div>
            {% endif %}

            <div class="panelbox">

                <form action="{{ path('login') }}" method="post" novalidate="novalidate">

                    <div class="form-group">
                        <label>آدرس ایمیل</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="آدرس ایمیل را وارد نمایید" />
                        </div>
                    </div>

                    <div class="form-group has-feedback form-password">
                        <label>کلمه عبور <a href="{{ path('reset') }}" class="pull-left fs-13px">فراموش شده ؟</a></label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-hashtag"></i></div>
                            <input type="password" class="form-control" id="password" name="_password" placeholder="کلمه عبور را وارد نمایید" />
                            <i class="fa fa-eye-slash form-control-feedback padding-10px mouse-hand pointer-events-inherit password-key gray-hover"></i>
                        </div>
                    </div>

                    <div class="margin-top-30px"></div>
                    <input type="submit" class="btn btn-success btn-block" value="ورود به اشتراک">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                </form>
            </div>

            <div class="margin-top-25px"></div>
            <div class="center">کاربر جدید هستید؟ <a href="/register">ثبت نام کنید</a></div>

        </div>
    </div>

    <script>
        showPassword('.form-password');
    </script>

{% endblock %}