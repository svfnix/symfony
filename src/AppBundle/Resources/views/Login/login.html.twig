{% extends 'AppBundle::layout.html.twig' %}

{% block layout_body %}

    {% if error %}
        <div>{{ error.message|trans }}</div>
    {% endif %}
    <style>
        body{background: #f9f9f9}
    </style>

    <div class="row margin-top-100px">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="panelbox">
                <form action="{{ path('login') }}" method="post" novalidate="novalidate">

                    <div class="form-group">
                        <label>نام کاربری یا آدرس ایمیل</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user"></i></div>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="نام کاربری یا آدرس ایمیل را وارد نمایید" />
                        </div>
                    </div>

                    <div class="form-group has-feedback form-password">
                        <label>کلمه عبور <a href="#" class="pull-left fs-13px">فراموش شده ؟</a></label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-hashtag"></i></div>
                            <input type="password" class="form-control" id="password" name="_password" placeholder="کلمه عبور را وارد نمایید" />
                            <i class="fa fa-eye-slash form-control-feedback padding-10px mouse-hand pointer-events-inherit password-key gray-hover"></i>
                        </div>
                    </div>

                    <div class="margin-top-30px"></div>
                    <input type="submit" class="btn btn-success btn-block" value="ورود به اشتراک">

                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                </form>
            </div>

            <div class="margin-top-25px"></div>
            <div class="center">کاربر جدید هستید؟ <a href="/register">ثبت نام کنید</a></div>

        </div>
    </div>

    <script>
        showPassword('.form-password');
    </script>

{% endblock %}